<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_bar_settings"
        android:layout_height="50dp">
         <Toolbar
             android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:id="@+id/close_settings"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Close"
                     android:textColor="@android:color/white"
                     android:textSize="17sp"
                     android:textStyle="bold"
                     android:layout_alignParentStart="true"/>

                 <TextView
                     android:id="@+id/update_settings"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Update"
                     android:textColor="@android:color/white"
                     android:textSize="17sp"
                     android:textStyle="bold"
                     android:layout_alignParentEnd="true"
                     android:layout_marginRight="10dp"/>

             </RelativeLayout>

         </Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_file_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:layout_below="@+id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/profile_image_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/settings_file_image"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/settings_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_change"
        android:hint="Phone Number..."
        android:padding="10dp"
        android:layout_margin="15dp"
        />
    <EditText
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone_number"
        android:hint="Full Name ..."
        android:padding="10dp"
        android:layout_margin="15dp"
        />
    <EditText
        android:id="@+id/settings_full_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name"
        android:hint="Address..."
        android:padding="10dp"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/set_security_question_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_address"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:text="Set Security Question"

        />

</RelativeLayout>